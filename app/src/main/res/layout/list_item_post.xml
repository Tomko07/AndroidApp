<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_box">

    <TextView
        android:id="@+id/list_item_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:padding="4dp"
        style="@style/PostTitleStyle"
        tools:text="Post Title"/>

    <TextView
        android:id="@+id/list_item_post_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_post_title"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        style="@style/PostInfoStyle"
        tools:text="Post Author"/>

    <TextView
        android:id="@+id/list_item_post_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@id/list_item_post_author"
        style="@style/PostInfoStyle"
        tools:text="Post Date"/>

    <TextView
        android:id="@+id/list_item_post_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_post_author"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        style="@style/PostInfoStyle"
        tools:text="Post Status"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/list_item_post_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_post_date"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="end"
        style="@style/PostInfoStyle"
        tools:text="Category"
        android:visibility="invisible"/>
</RelativeLayout>
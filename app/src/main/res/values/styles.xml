<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
            
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">@color/burlywood</item>
    </style>

    <style name="ToolbarColoredIcons" parent="AppTheme">
        <item name="android:textColorSecondary">@color/brown</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@color/burlywood</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="FieldStyle">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    
    <style name="Background">
        <item name="android:background">@color/lightCream</item>"
    </style>

    <style name="PostTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="PostInfoStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ViewPostTitleStyle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="ViewPostContentStyle">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ViewPostAuthorStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
